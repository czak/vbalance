<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:text="Środki na koncie"
        android:textColor="@android:color/black"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/piggy_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/piggy"/>

        <TextView
            android:id="@+id/balance_amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/piggy_image"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:text="- zł"
            android:textColor="@color/virginRed"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="123,45 zł"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/account_tariff_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:textColor="@color/subtext"
        android:textSize="12sp"
        android:text="Taryfa -"
        tools:text="Taryfa #ChcęWszystko"/>

    <TextView
        android:id="@+id/account_validity_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:textColor="@color/subtext"
        android:textSize="12sp"
        android:text="Ważne do -"
        tools:text="Ważne do 2017-01-30"/>
</LinearLayout>
