<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:text="Pakiety dodatkowe"
        android:textColor="@android:color/black"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/minutes"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-2dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:fontFamily="sans-serif-condensed"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.75"
                android:text="Minuty do wszystkich"
                android:textColor="@android:color/black"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/package_minutes_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:fontFamily="sans-serif-condensed"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.75"
                tools:text="0"
                android:textColor="@color/subtext"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/package_minutes_validity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/package_minutes_text_view"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:fontFamily="sans-serif-condensed"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.75"
                tools:text="Ważny do: -"
                android:textColor="@color/subtext"
                android:textSize="10sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/data"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-2dp"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:fontFamily="sans-serif-condensed"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.75"
                android:text="Data"
                android:textColor="@android:color/black"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/package_data_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:fontFamily="sans-serif-condensed"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.75"
                tools:text="1451 MB"
                android:textColor="@color/virginRed"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/package_data_validity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/package_data_text_view"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:fontFamily="sans-serif-condensed"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.75"
                tools:text="Ważny do 2016-02-28"
                android:textColor="@android:color/black"
                android:textSize="10sp"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>
    </LinearLayout>

</LinearLayout>